<%= image_tag @portfolio_item.main_image unless @portfolio_item.thumb_image.nil? %>
<h2><%= @portfolio_item.title %></h2>
<h3><%= @portfolio_item.subtitle %></h3>
<p><%= @portfolio_item.body %></p>
<%= link_to "Edit", edit_portfolio_path(@portfolio_item.id) %>
<%= link_to 'Delete', portfolio_path(@portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %>